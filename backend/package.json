{
  "name": "test-log-api",
  "version": "1.0.0",
  "description": "Express API with Clean Architecture, validation, and logging",
  "main": "dist/index.js",
  "author": "Juan Hernandez",
  "license": "MIT",
  "keywords": [
    "express",
    "typescript",
    "clean-architecture",
    "logging",
    "validation",
    "joi"
  ],
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run lint && tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "mocha --require ts-node/register test/**/*.test.ts",
    "test:watch": "mocha --require ts-node/register test/**/*.test.ts --watch"
  },
  "dependencies": {
    "@smdv/logger": "^1.0.5",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/chai": "^4.3.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.8",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "chai": "^4.3.7",
    "eslint": "^9.36.0",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^11.7.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
